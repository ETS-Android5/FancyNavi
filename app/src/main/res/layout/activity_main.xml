<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_linear_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <com.here.msdkui.guidance.GuidanceManeuverView
        android:id="@+id/guidanceManeuverView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/signpostImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <ImageView
            android:id="@+id/junctionImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:elevation="2dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signpostImageView" />

        <fragment
            android:id="@+id/mapFragmentView"
            class="com.here.android.mpa.mapping.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/north_up"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:text="â†‘"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/traffic_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/lui_light"
            android:elevation="2dp"
            android:text="T"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="133dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@+id/main_linear_layout">

            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="2dp"
                android:text="Reset"
                android:visibility="invisible" />

            <Button
                android:id="@+id/startGuidance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="2dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/mapFragmentView"
            app:layout_constraintEnd_toEndOf="@id/mapFragmentView"
            app:layout_constraintTop_toTopOf="@id/mapFragmentView"
            app:layout_constraintVertical_bias="0.5">

            <Button
                android:id="@+id/zoom_in"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/lui_light"
                android:text="+"
                android:textSize="24sp" />

            <Button
                android:id="@+id/zoom_out"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/lui_light"
                android:text="-"
                android:textSize="24sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="8dp"
            android:background="#00C7C7C7"
            android:max="100"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/mapFragmentView"
            app:layout_constraintEnd_toEndOf="@+id/mapFragmentView"
            app:layout_constraintStart_toStartOf="@+id/mapFragmentView"
            app:layout_constraintTop_toTopOf="@+id/mapFragmentView" />

        <TextView
            android:id="@+id/calculatingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#00C7C7C7"
            android:text="Calculating..."
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/car_route"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@android:color/holo_red_dark"
                    android:foreground="@drawable/ic_drive"
                    android:padding="4dp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/truck_route"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@android:color/holo_orange_dark"
                    android:foreground="@drawable/ic_truck_24"
                    android:padding="4dp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/scooter_route"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@android:color/holo_green_dark"
                    android:foreground="@drawable/ic_scooter"
                    android:padding="4dp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/bike_route"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@android:color/holo_blue_dark"
                    android:foreground="@drawable/ic_bike_24"
                    android:padding="4dp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/peds_route"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:background="@android:color/holo_purple"
                    android:foreground="@drawable/ic_walk_24"
                    android:padding="4dp"
                    android:visibility="invisible" />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/safety_cam_image_view"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:foreground="@android:drawable/ic_menu_camera"
                android:visibility="invisible"
                app:srcCompat="@android:color/holo_red_light" />

            <TextView
                android:id="@+id/safety_cam_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_light"
                android:textAlignment="center"
                android:textColor="@color/lui_white"
                android:textSize="24sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/safety_cam_speed_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_red_light"
                android:textAlignment="center"
                android:textColor="@color/lui_white"
                android:textSize="16sp"
                android:visibility="invisible" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>